<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.shape.Line?>

<Pane xmlns:fx="http://javafx.com/fxml" fx:id="rootPane" fx:controller="com.gresskar.trafficsimulator.Controller" style="-fx-background-color: lightgreen;">
    <!-- Roads -->
    <Pane minWidth="800" maxWidth="800" minHeight="60" maxHeight="60" style="-fx-background-color: gray;" layoutX="0" layoutY="150" />
    <Pane minWidth="800" maxWidth="800" minHeight="60" maxHeight="60" style="-fx-background-color: gray;" layoutX="0" layoutY="450" />
    <Pane minWidth="60" maxWidth="60" minHeight="800" maxHeight="800" style="-fx-background-color: gray;" layoutX="125" layoutY="0" />
    <Pane minWidth="60" maxWidth="60" minHeight="800" maxHeight="800" style="-fx-background-color: gray;" layoutX="500" layoutY="0" />

    <!-- Markings on the roads -->
    <Line startX="0" startY="180" endX="800" endY="180" stroke="white" strokeWidth="5"/>
    <Line startX="0" startY="480" endX="800" endY="480" stroke="white" strokeWidth="5"/>
    <Line startX="155" startY="0" endX="155" endY="600" stroke="white" strokeWidth="5"/>
    <Line startX="530" startY="0" endX="530" endY="600" stroke="white" strokeWidth="5"/>

    <!-- GUI -->
    <GridPane alignment="CENTER_RIGHT" layoutX="679" layoutY="0" prefHeight="600" hgap="5" vgap="10" style="-fx-background-color: lightgrey;">
        <Label fx:id="labelCarCount" text="Car count: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="textFieldCarCount" maxWidth="50" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Button onAction="#onButtonCarCount" text="OK" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label fx:id="labelCarSpeed" text="Car speed: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="textFieldCarSpeed" maxWidth="50" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Button onAction="#onButtonCarSpeed" text="OK" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label fx:id="labelLightSpeed" text="Light speed: " GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="textFieldLightSpeed" maxWidth="50" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Button onAction="#onButtonLightSpeed" text="OK" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>
</Pane>